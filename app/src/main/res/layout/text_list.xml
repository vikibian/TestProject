<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="biaoti"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="bottom"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="18sp" />

    <jaydenxiao.com.expandabletextview.ExpandableTextView
        android:id="@+id/etv"
        android:background="@drawable/bg_show_result_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:animDuration="200"
        android:padding="8dp"
        app:collapseDrawable="@drawable/icon_green_arrow_down"
        app:collapseExpandGrarity="right"
        app:collapseExpandTextColor="#FA7C20"
        app:contentTextColor="@color/gray"
        app:contentTextSize="14sp"

        app:expandDrawable="@drawable/icon_green_arrow_up"
        app:maxCollapsedLines="0"
        app:textCollapse="收起"
        app:textExpand="展开" />

</LinearLayout>