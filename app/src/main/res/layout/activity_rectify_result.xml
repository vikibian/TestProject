<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rectifyresult.RectifyResultActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="检查项名称："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="3dp"
                android:background="@drawable/stroke"
                android:text=" "
                android:layout_margin="3dp"
                android:padding="3dp"
                android:textColor="@color/black"
                android:inputType="textMultiLine"
                android:id="@+id/rectify_result_item_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="整改方式："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginTop="3dp"
                android:background="@drawable/stroke"
                android:layout_margin="3dp"
                android:padding="6dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:inputType="textMultiLine"
                android:id="@+id/rectify_result_item_way_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="整改措施："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginTop="3dp"
                android:background="@drawable/stroke"
                android:layout_margin="3dp"
                android:padding="12dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:inputType="textMultiLine"
                android:id="@+id/rectify_result_item_action_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="整改完成时间："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="3dp"
                android:background="@drawable/stroke"
                android:layout_margin="3dp"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:drawableRight="@drawable/ic_perm_contact_calendar_blue_600_24dp"
                android:id="@+id/rectify_result_item_finishtime_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="整改情况："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginTop="3dp"
                android:background="@drawable/stroke"
                android:gravity="center_vertical"
                android:layout_margin="3dp"
                android:padding="15dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:id="@+id/rectify_result_item_rectifyresult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.neu.testimageload.listitem.zhenggai.MyGridView
                android:focusable="false"
                android:numColumns="3"
                android:id="@+id/suggestion_gridview"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </com.neu.testimageload.listitem.zhenggai.MyGridView>

            <Button
                android:id="@+id/rectify_result_item_submit_button"
                android:text="提交"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>