<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".answerlist.AnswerListActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <Button
                android:text="已整改"
                android:textColor="@color/button_selecor_color"
                android:id="@+id/button_answerlist_left"
                android:background="@drawable/logincode_left_selector"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="50dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <Button
                android:text="已整改"
                android:textColor="@color/button_selecor_color"
                android:id="@+id/button_answerlist_middle"
                android:background="@drawable/logincode_middle_selector"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="50dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <Button
                android:text="未整改"
                android:textColor="@color/button_selecor_color"
                android:id="@+id/button_answerlist_right"
                android:background="@drawable/logincode_right_selector"
                android:layout_width="100dp"
                android:layout_height="50dp" />

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>