<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QMUITAB.QMUITABActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.qmuiteam.qmui.widget.tab.QMUITabSegment
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:qmui_bottomDividerColor="?attr/qmui_skin_support_color_separator"
            app:qmui_bottomDividerHeight="1px"
            android:id="@+id/tab_segment">

        </com.qmuiteam.qmui.widget.tab.QMUITabSegment>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/contentViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fitsSystemWindows="true" >

            <FrameLayout
                android:id="@+id/data_main_container"
                android:background="#EEEEEE"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>

        </androidx.viewpager.widget.ViewPager>



    </LinearLayout>

</com.qmuiteam.qmui.layout.QMUILinearLayout>